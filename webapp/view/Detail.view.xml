<mvc:View 
	controllerName="de.integrata.training.opentext.controller.Detail"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc">
	<Page title="{i18n>DetailPageTitle}">
		<content>
			<ObjectHeader title="{Custname}">
				<attributes>
					<ObjectAttribute title="{i18n>City}" text="{City}"/>
					<ObjectAttribute title="{i18n>Street}" text="{Street}"/>
				</attributes>
			</ObjectHeader>
			<Table items="{Flugbuchungen}">
				<columns>
					<Column>
						<Label text="{i18n>Carrid}"/>
					</Column>
					<Column>
						<Label text="{i18n>Fldate}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{Carrid}"/>
							<Text text="{path: 'Fldate', type: 'sap.ui.model.type.Date'}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>